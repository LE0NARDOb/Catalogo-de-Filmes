@model List<CatalogoFilmes.Models.Filme>
@{
    ViewData["Title"] = "Catálogo de Filmes";
}

<div class="text-center mb-4">
    <h1 class="display-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-film" viewBox="0 0 16 16">
            <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V1zm4 0v6h8V1H4zm8 8H4v6h8V9zM1 1v2h2V1H1zm2 3H1v2h2V4zM1 7v2h2V7H1zm2 3H1v2h2v-2zm-2 3v2h2v-2H1zM15 1h-2v2h2V1zm-2 3v2h2V4h-2zm2 3h-2v2h2V7zm-2 3v2h2v-2h-2zm2 3h-2v2h2v-2z"/>
        </svg>
        Catálogo de Filmes
    </h1>
</div>

<div class="container">
    <div class="row">
        
        @foreach (var filme in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    
                    <img src="@filme.Poster" class="card-img-top" alt="Poster de @filme.Titulo" style="height: 400px; object-fit: cover;">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@filme.Titulo</h5>
                        
                        <h6 class="card-subtitle mb-2 text-muted">
                            @filme.Diretor (@filme.AnoLancamento)
                        </h6>
                        
                        <p class="card-text">
                            @filme.Sinopse
                        </p>
                        
                        <a asp-controller="Filme" asp-action="Details" asp-route-id="@filme.Id" 
                           class="btn btn-primary mt-auto">
                            Ver Detalhes
                        </a>
                    </div>
                </div>
            </div>
        }
        
    </div>
</div>